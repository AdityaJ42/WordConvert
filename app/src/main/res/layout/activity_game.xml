<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#b2dfe8"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/countdown"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/countdown"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="33dp"
        android:hint="Source Word"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/prev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/reset"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_toLeftOf="@+id/reset"
        android:layout_toStartOf="@+id/reset"
        android:hint="Last Change"
        android:textAlignment="center"
        android:textColor="#087f26"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/prev"
        android:layout_alignStart="@+id/prev"
        android:layout_below="@+id/reset"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="23dp"
        android:hint="Input"
        android:imeOptions="actionDone"
        android:singleLine="true"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/dest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/source"
        android:layout_alignBottom="@+id/source"
        android:layout_toEndOf="@+id/countdown"
        android:layout_toRightOf="@+id/countdown"
        android:hint="Destination Word"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="25dp" />

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/check"
        android:layout_alignStart="@+id/check"
        android:layout_below="@+id/dest"
        android:layout_marginTop="16dp"
        android:text="Reset" />

    <Button
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/input"
        android:layout_marginEnd="48dp"
        android:layout_marginRight="48dp"
        android:text="Check" />

    <TextView
        android:id="@+id/turns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/reset"
        android:layout_alignStart="@+id/reset"
        android:layout_alignTop="@+id/countdown"
        android:text="Turn: "
        android:textSize="25dp" />

    <Button
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/dest"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/dest"
        android:layout_marginBottom="29dp"
        android:text="Main Menu" />


</RelativeLayout>
